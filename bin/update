#!/usr/bin/env php
<?php
$paths = [
  __DIR__ . '/../vendor/autoload.php',
  __DIR__ . '/../../../../vendor/autoload.php',
];
foreach ($paths as $path) {
  if (file_exists($path)) {
    require_once $path;
    break;
  }
}

$args = $_SERVER['argv'];
array_shift($args);

$cli = new BeanstalkSatisGen\Cli(getcwd());
$cli->update($args);
